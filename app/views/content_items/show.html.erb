<h1><%= @content_item.title %></h1>

<div><%= link_to 'Edit', edit_content_item_path(@content_item) %></div>
<div><%= link_to 'Delete', content_item_path(@content_item), method: :delete, 'data-confirm': 'Are you sure?' %></div>

<hr>

<%= @content_item.body %>

<hr>

<% unless @content_item.social_networks.blank? %>
  <h3>Publish on: </h3>
  <ul>
    <% @content_item.publishing_targets.includes(:social_network).each do |p_target|%>
      <li> <%= p_target.social_network.description%>: <%= p_target.publishing_date %></li>
    <% end %>
  </ul>
<% end %>
